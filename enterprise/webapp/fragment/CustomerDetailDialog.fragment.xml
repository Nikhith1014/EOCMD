<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog title="Customer Details" class="sapUiContentPadding"  stretch="{device>/system/phone}">
        
        <VBox class="sapUiSmallMargin">

            <ObjectHeader
                title="{detail>/name}"
                number="{detail>/id}"
                numberUnit="ID"
                intro="Customer Profile">
            </ObjectHeader>

            <ObjectAttribute title="Username" text="{detail>/username}"/>
            <ObjectAttribute title="Email" text="{detail>/email}"/>
            <ObjectAttribute title="Phone" text="{detail>/phone}"/>
            <ObjectAttribute title="City" text="{detail>/address/city}"/>
            <ObjectAttribute title="Website" text="{detail>/website}"/>
            <ObjectAttribute title="Company" text="{detail>/company/name}"/>

        </VBox>

        <endButton>
            <Button text="Close" press=".onCloseDialog"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>
